# ETL Pipeline Configuration Template
# Copy this file to .env and customize for your environment

# Environment Settings
ENVIRONMENT=development
LOG_LEVEL=INFO

# Spark Configuration
SPARK_MASTER=local[*]
SPARK_APP_NAME=EcommerceETL
SPARK_SQL_WAREHOUSE_DIR=spark-warehouse

# Data Quality Thresholds
MAX_NULL_PERCENTAGE=5.0
MAX_DUPLICATE_PERCENTAGE=1.0
MIN_DATA_FRESHNESS_HOURS=24

# File Paths
RAW_DATA_PATH=data/raw
PROCESSED_DATA_PATH=data/processed
REPORTS_PATH=reports
LOGS_PATH=logs

# Database Settings (for production)
HIVE_DATABASE=ecommerce_dw
HIVE_METASTORE_URI=thrift://localhost:9083

# Monitoring Settings
ENABLE_MONITORING=true
METRICS_ENDPOINT=http://localhost:8080/metrics

# Security Settings (for production)
KERBEROS_ENABLED=false
KERBEROS_PRINCIPAL=etl-service@REALM.COM
KERBEROS_KEYTAB=/etc/security/keytabs/etl-service.keytab